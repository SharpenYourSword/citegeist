<% title "Change Password" %>

<%= form_tag change_password_user_path(@user), :method => :put do %>
	<% unless has_permission?(:user) %>
		<div class='form-group'>
			<label>Original Password</label>
			<%= password_field_tag "original_password", "", :class => "form-control" %>
		</div>
	<% end %>
	<div class='form-group'>
		<label>New Password</label>
		<%= password_field_tag "new_password", "", :class => "form-control" %>
	</div>
	<div class='form-group'>
		<label>Repeat New Password</label>
		<%= password_field_tag "new_password_confirmation", "", :class => "form-control" %>
	</div>

	<%= submit_tag "Change Password" %>
<% end %>
